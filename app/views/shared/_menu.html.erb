<%= provide :main_menu do %>
  <header class="p-3 bg-dark text-white">
    <div class="container">
      <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <%= nav_tab 'Home', root_path, class: 'nav-link', current_page: request.path %>
              </li>
              <li class="nav-item">
                <%= nav_tab 'Payments history', payments_path, class: 'nav-link', current_page: request.path %>
              </li>
              <li class="nav-item">
                <%= nav_tab 'New Payment', new_payment_path, class: 'nav-link', current_page: request.path %>
              </li>
            </ul>
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
              <% if logged_in? %>
                <li class="nav-item">
                  <span class="navbar-text">
                    <%= current_user.name %>
                  </span>
                </li>
              <% else %>
                <li class="nav-item">
                  <%= nav_tab 'Sign Up', new_sessions_path, class: 'nav-link', current_page: request.path %>
                <li class="nav-item">
                  <%= nav_tab 'Log In', new_user_path, class: 'nav-link', current_page: request.path %>
                </li>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </div>
  </header>
<% end %>
