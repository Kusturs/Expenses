<%= render 'shared/errors', object: @payment %>

<%= form_with model: @payment, local: true do |f| %>
  <div class="form-group">
    <%= f.label :amount %>
    <%= f.text_field :amount, class: 'form-control', placeholder: "Amount" %>
  </div>

  <div class="form-group">
    <%= f.label :product %>
    <%= f.text_field :product, class: 'form-control', placeholder: "Product" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control', placeholder: "Description..." %>
  </div>

  <div class="form-group">
    <%= f.submit "Submit", class: 'btn btn-primary' %>
  </div>
<% end %>
